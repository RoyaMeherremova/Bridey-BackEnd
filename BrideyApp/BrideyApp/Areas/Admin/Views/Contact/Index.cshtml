@model List<Contact>
@{
    ViewData["Title"] = "Index";

}
<div class="card mt-5" style="width: 95%;margin-left: 34px;">
    <div class="table-responsive text-nowrap">
          @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align: center;">UserName</th>
                        <th style="text-align: center;">Phone</th>
                        <th style="text-align: center;">Email</th>
                        <th style="text-align: center;">Operations</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var contact in Model)
                    {
                        <tr data-id="@contact.Id">
                            <td class="py-1" style="text-align: center;">
                                @contact.FirstName
                        </td>
                        <td class="py-1" style="text-align: center;">
                                @contact.Phone
                        </td>
                        <td class="py-1" style="text-align: center;">
                                @contact.Email
                        </td>
                         <td class="py-1" style="text-align: center;">
                                <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@contact.Id">Info</a>
                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <a class="btn btn-outline-danger delete-contact">Delete</a>
                                }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
    </div>

</div>
@section Scripts {

    <script src="~/admin/js/admin.js"></script>
}



