@model List<Social>
@{
    ViewData["Title"] = "Index";
}

<div class="card mt-5" style="width: 95%;margin-left: 34px;">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th style="text-align: center;">Icon</th>
                    <th style="text-align: center;">Link</th>
                    <th style="text-align: center;"> Operations</th>
                    <a class="btn btn-success text-white" asp-action="Create" style="float:right;margin: 22px;">Create</a>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var social in Model)
                {
                    <tr data-id="@social.Id">
                         <td class="py-1" style="text-align: center;">
                            @social.Icon
                        </td>
                        <td class="py-1" style="text-align: center;">
                            @social.Link
                        </td>
                        <td class="py-1" style="text-align: center;">
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@social.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@social.Id">Edit</a>
                            <a class="btn btn-outline-danger delete-social">Delete</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
@section Scripts {

    <script src="~/admin/js/admin.js"></script>
}



