@model BlogCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <label style="padding-left:6px;" for="formFile" class="form-label my-2">Choose Photo</label>
        <input class="form-control" id="customFile" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>
        <div class="form-group">
            <label style="padding-left:6px;" for="formFile" class="form-label my-2">Add Title Blog</label>
            <input class="form-control" id="customFile" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title">@ViewBag.error</span>
        </div>
        <div class="form-group">
            <label style="padding-left:6px;" for="formFile" class="form-label my-2">Add Author</label>
            <select class="form-control" id="customFile" asp-for="AuthorId" asp-items="@ViewBag.authors"></select>
            <span class="text-danger" asp-validation-for="AuthorId">@ViewBag.error</span>
        </div>
        <div class="form-group">
            <label style="padding-left:6px;" for="formFile" class="form-label my-2">Add Description</label>
            <textarea class="form-control" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description">@ViewBag.error</span>
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
 }


