@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="text-danger mb-2" asp-validation-summary="All"></div>
                <form method="post" asp-controller="Account" asp-action="ResetPassword">
                    <div class="login-form" style=" position: relative;left: 350px;top: 50px;">
                        <h4 class="login-title">Forgot Password</h4>

                        <div class="row">
                            <div class="reset" style="display: flex;flex-direction: column; text-align: left; justify-content: space-between; height: 230px;">
                                <input asp-for="Password" placeholder="Password" style="height: 50px; padding-left: 12px; margin-top: 25px;" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                                <input asp-for="ConfirmPassword" placeholder="Repeat Password" style="height: 50px; padding-left: 12px;" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                <button type="submit" style="width: 100px; height: 40px;border: none; background-color: #dd9565;color: #ffecd5;">
                                    Send
                                </button>
                            </div>
                            <input type="hidden" asp-for="Token" value="@Model.Token" />
                            <input type="hidden" asp-for="UserId" value="@Model.UserId" />

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}