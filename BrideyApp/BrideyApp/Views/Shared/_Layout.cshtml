<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.1/mdb.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="~/assets/scss/style.css">
    <title>Bridey</title>
</head>

<body>
    <!-- Start Header -->
    <header>
        <div id="overlay" class="d-none"></div>
        <section id="nav-area">
            <div class="container">
                <div class="row nav-area-content">
                    <div class="col-4 d-lg-block d-none">
                        <div class="contact">
                            <div class="left-side">
                                <i class="fa-solid fa-headphones-simple"></i>
                            </div>
                            <div class="right-side">
                                <span class="text">Call us</span>
                                <span class="phone">+84 1800 33355</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-12 col-md-12 col-12">
                        <div class="logo">
                            <a asp-controller="Home" asp-action="Index"><img src="~/assets/images/Logo.svg" alt=""></a>
                        </div>
                    </div>
                    <div class="col-4  d-lg-block d-none">
                        <div class="right-area">
                            <div class="search">
                                <i class="fa-solid fa-magnifying-glass icon" data-bs-toggle="modal"
                                   data-bs-target="#exampleModal"></i>
                            </div>
                            <div><i class="fa-regular fa-user icon user-icon"></i></div>
                            <span class="count-wishlist">0</span>
                            <div><a asp-controller="Wishlist" asp-action="Index"><i class="fa-regular fa-heart icon"></i></a></div>
                            <span class="count-basket">0</span>
                            <div class="basket">
                                <a asp-controller="Basket" asp-action="Index"><i class="fa-solid fa-basket-shopping"></i></a>
                            </div>
                        </div>
                        <div class="login-register d-none">
                            <ul>
                                <li><a asp-controller="Login" asp-action="Index">Login</a></li>
                                <li><span>/</span></li>
                                <li><a asp-controller="Register" asp-action="Index">Register</a></li>

                            </ul>
                        </div>
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Search</h1><img src="~/assets/images/search-icon.png">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <input type="text">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="side-bar">
            <div class="close"> <span>Close</span></div>
            <ul>
                <li class="activ"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                <li><a asp-controller="About" asp-action="Index">About</a></li>
                <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
            </ul>
        </div>
        <section id="responsive-nav-area" class="d-lg-none">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 col-2 d-lg-none">
                        <div class="hamburger"><i class="fa-solid fa-bars"></i></div>
                    </div>
                    <div class="col-md-10 col-10 d-lg-none">
                        <div class="right-area">
                            <div class="search responsive-icon">
                                <i class="fa-solid fa-magnifying-glass icon"
                                   data-bs-toggle="modal" data-bs-target="#exampleModal-responsive"></i>
                            </div>
                            <div class="responsive-icon">
                                <i class="fa-regular fa-user icon user-icon-responsive"></i>
                            </div>
                            <span class="count-wishlist">0</span>
                            <div clas="responsive-icon">
                                <a asp-controller="Wishlist" asp-action="Index">
                                    <i class="fa-regular fa-heart heart-icon"></i>
                                </a>
                            </div>
                            <span class="count-basket">0</span>
                            <div class="basket responsive-icon">
                                <a asp-controller="Basket" asp-action="Index">
                                    <i class="fa-solid fa-basket-shopping"></i>
                                </a>
                            </div>
                        </div>
                        <div class="login-register-responsive d-none">
                            <ul>
                                <li><a asp-controller="Login" asp-action="Index">Login</a></li>
                                <li> <span>/</span></li>
                                <li><a asp-controller="Register" asp-action="Index">Register</a></li>

                            </ul>
                        </div>
                        <!-- Modal -->
                        <div class="modal responsive-modal fade" id="exampleModal-responsive" tabindex="-1"
                             aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <form>
                                            <input type="text" placeholder="Search...">
                                        </form>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="nav-down">
            <div class="container">
                <div class="d-lg-block d-none">
                    <ul class="top-menu">
                        <img class="decor-img d-none" src="~/assets/images/decor2.png">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="About" asp-action="Index">About</a></li>
                        <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                        <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                        <img class="decor-img d-none" src="~/assets/images/decor.png">
                    </ul>
                    <div class="right-area d-none">
                        <div class="search"><i class="fa-solid fa-magnifying-glass icon"></i></div>
                        <span class="count-wishlist">0</span>
                        <div><a asp-controller="Wishlist" asp-action="Index"><i class="fa-regular fa-heart icon"></i></a></div>
                        <span class="count-basket">0</span>
                        <div class="basket">
                            <a asp-controller="Basket" asp-action="Index"><i class="fa-solid fa-basket-shopping"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>
    <!-- End header -->
    @RenderBody()
    <!-- Start Footer -->
    <footer>
        <section id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-sm-12 col-12 col-md-2">
                        <div class="ApColumn ">
                            <div class="block ApLink ApBlockLink">
                                <ul>
                                    <li><a href="blog.html" target="_self">Blog </a></li>
                                    <li>
                                        <a href="https://demo73.leotheme.com/prestashop/leo_bridey_demo/en/content/4-about-us"
                                           target="_self">About Us </a>
                                    </li>
                                    <li><a href="#" target="_self">Careers</a></li>
                                    <li><a href="#" target="_self"> Partner</a></li>
                                </ul>
                            </div>

                        </div>

                    </div>
                    <div class="col-lg-2 col-sm-12 col-12 col-md-3">
                        <div class="ApColumn ">

                            <div class="block ApLink ApBlockLink">
                                <ul>
                                    <li><a href="#" target="_self">Size chart</a></li>
                                    <li>
                                        <a href="https://demo73.leotheme.com/prestashop/leo_bridey_demo/en/guest-tracking"
                                           target="_self"> Track order </a>
                                    </li>
                                    <li><a href="#" target="_self">Dress Guide </a></li>
                                    <li>
                                        <a href="https://demo73.leotheme.com/prestashop/leo_bridey_demo/en/content/1-delivery"
                                           target="_self">Shipping </a>
                                    </li>
                                    <li>
                                        <a href="https://demo73.leotheme.com/prestashop/leo_bridey_demo/en/content/5-secure-payment"
                                           target="_self">Payment Methods</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-12 col-12 col-md-3">
                        <div class="logo">
                            <a asp-controller="Home" asp-action="Index">
                                <img src="~/assets/images/Logo.svg">
                            </a>

                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-12 col-12 col-md-4">
                        <div class="block-information">
                            <h4 class="title_block">Showroom</h4>
                            <p>Box 565, Charlestown, Nevis, West Indies,Caribbean</p>
                            <ul>
                                <li>Monday - Friday: <span>8am - 4pm </span></li>
                                <li>Saturday: <span>9am - 5pm</span></li>
                            </ul>
                        </div>
                        <div class="block-social">
                            <h6 class="title_block">
                                Follow us
                            </h6>
                            <ul>
                                <li class="facebook">
                                    <a href="#" title="Facebook" target="_blank"
                                       rel="noopener noreferrer"><i class="fa-brands fa-facebook-f"></i></a>
                                </li>
                                <li class="twitter">
                                    <a href="#" title="Twitter" target="_blank"
                                       rel="noopener noreferrer"><i class="fa-brands fa-twitter"></i></a>
                                </li>
                                <li class="pinterest">
                                    <a href="#" title="Pinterest" target="_blank"
                                       rel="noopener noreferrer"><i class="fa-brands fa-pinterest"></i></a>
                                </li>
                                <li class="instagram">
                                    <a href="#" title="Instagram" target="_blank"
                                       rel="noopener noreferrer"><i class="fa-brands fa-instagram"></i></a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>

            </div>
        </section>
        <hr>
        <section id="footer-bottom">
            <div class="container">
                <div class="block-copyright ApRawHtml d-lg-block d-none">
                    Copyright © 2020 All Rights Reserved. <span>Bridey.</span>
                </div>
            </div>
        </section>
    </footer>
    <!-- End Footer -->

    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.7/dist/umd/popper.min.js"
            integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
            integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"
            integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/assets/js/common.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
